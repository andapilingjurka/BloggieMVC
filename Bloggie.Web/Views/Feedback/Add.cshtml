@model Bloggie.Web.Models.ViewModels.AddFeedbackRequest

@{

}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>- Give Feedback -</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Lini Mesazhin Tuaj!</label>
            <textarea class="form-control" id="name" asp-for="Mesazhi" required></textarea>
            <span class="text-danger" asp-validation-for="Mesazhi"></span>
        </div>




        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>